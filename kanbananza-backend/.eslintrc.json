{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "import/no-dynamic-require": 0,
    "import/no-mutable-exports": 0,
    "prefer-template": 0,
    "consistent-return": 0,
    "camelcase": 0,
    "global-require": 0,
    "no-unused-vars": 0,
    "arrow-body-style": 0
  },
  "overrides": [
    {
      "files": ["**/*.spec.js", "**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
