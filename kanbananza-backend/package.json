  "main": "src/main/index.js",
  "scripts": {
    "start": "NODE_ENV=production babel-node src/main/index.js",
    "dev": "NODE_ENV=development nodemon --exec babel-node src/main/index.js",
    "test": "jest --runInBand",
    "test:unit": "jest --runInBand src/test/unit",
    "test:acceptance": "jest --runInBand src/test/acceptance",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "format": "npm run format:fix",
    "lint:spec": "lint-openapi docs/openapi.json --report_statistics",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint": "npm run lint:fix",
    "validate:spec": "lint-openapi docs/openapi.json --errors_only",
    "clean": "rm -rf node_modules",
    "clean:build": "rm -rf dist",
    "transpile": "babel ./src --out-dir dist",
    "build": "NODE_ENV=PRODUCTION npm run clean:build && npm run transpile"
  },
